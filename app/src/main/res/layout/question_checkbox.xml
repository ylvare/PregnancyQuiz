<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/question_checkbox"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/illustration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/baby"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question"
            android:layout_toRightOf="@+id/illustration"
            android:layout_alignParentTop="true"
            android:text="Hur ofta slår hjärtat på ett barn?"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/illustration"
            android:layout_below="@+id/question"
            android:gravity="left"
            android:orientation="vertical">

        <CheckBox
            android:id="@+id/option-a"
            style="@style/MyQuestionStyling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option A"
            android:onClick="answerCheckBox"/>

        <CheckBox
            android:id="@+id/option-b"
            style="@style/MyQuestionStyling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option B"
            android:onClick="answerCheckBox"/>

        <CheckBox
            style="@style/MyQuestionStyling"
            android:id="@+id/option-c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option C"
            android:onClick="answerCheckBox"/>

        <CheckBox
            style="@style/MyQuestionStyling"
            android:id="@+id/option-d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option D"
            android:onClick="answerCheckBox"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>