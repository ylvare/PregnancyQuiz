<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>


    <style name="MyQuestionStyling">
        <item name="android:padding">16dp</item>
    </style>


    <style name="MyQuestionImageStyling">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="MyQuestionTextViewStyling">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MyQuestionButtonStyling">
        <item name="android:textSize">14sp</item>
        <item name="android:scaleX">0.9</item>
        <item name="android:scaleY">0.9</item>
        <item name="android:textColor">#616161</item>
    </style>


    <style name="MyQuizStyling">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MyQuizBorderTitleStyling">
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="MyFooterStyling">
        <item name="android:padding">8dp</item>
    </style>

    <style name="MyFooterButtonStyling">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="MyFooterEnterNameStyling">
        <item name="android:textSize">20sp</item>
    </style>


</resources>
